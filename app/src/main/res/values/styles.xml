<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--适配侧边栏沉浸式-->
    <style name="MainAppTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="tv_title_style">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/main_font_color</item>
    </style>

    <style name="tv_desc_style">
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/light_font_color</item>
    </style>
</resources>
